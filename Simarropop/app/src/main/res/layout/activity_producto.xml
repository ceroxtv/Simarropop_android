<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#454545"
    android:backgroundTintMode="multiply"
    tools:context=".activities.ProductoActivity">

    <ImageView
        android:id="@+id/imgProducto"
        android:layout_width="409dp"
        android:layout_height="334dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/coche" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="82dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Precio:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProducto" />

    <TextView
        android:id="@+id/txtPrecio"
        android:layout_width="91dp"
        android:layout_height="31dp"
        android:layout_marginTop="52dp"
        android:fontFamily="sans-serif-black"
        android:text="2000$"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProducto" />

    <ImageView
        android:id="@+id/imgFavoritos"
        android:layout_width="45dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProducto"
        app:srcCompat="@drawable/baseline_heart" />

    <TextView
        android:id="@+id/txtDescripccion"
        android:layout_width="342dp"
        android:layout_height="53dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-black"
        android:paddingLeft="4dp"
        android:text="Pedazo coche mas guapo y esas cosas qeu pone aqui, tonto quien lo lea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.753"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPrecio" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategoriasProducto"
        android:layout_width="411dp"
        android:layout_height="74dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="318dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescripccion" />

    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.365"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvCategoriasProducto"
        android:src="@drawable/baseline_person_focused" />

    <TextView
        android:id="@+id/txtNombreUsuario"
        android:layout_width="89dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:fontFamily="sans-serif-black"
        android:text="Pedro14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgPerfil"
        app:layout_constraintTop_toBottomOf="@+id/rvCategoriasProducto"
        app:layout_constraintVertical_bias="0.207" />

    <Button
        android:id="@+id/btnChat"
        android:layout_width="72dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#A52A2A"
        android:text="Chat"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toEndOf="@+id/imgPerfil"
        app:layout_constraintTop_toBottomOf="@+id/rvCategoriasProducto" />
</androidx.constraintlayout.widget.ConstraintLayout>